#!/usr/bin/env bash
# Update package lists and install nginx
apt-get update -y
apt-get install nginx -y

# Create a default HTML file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Start nginx (without using systemctl)
/usr/sbin/nginx

# Verification message (optional)
echo "Nginx has been installed and configured. Now listening on port 80."

# End of script